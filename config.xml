<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tellmenow.app" version="1.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TellMeNow</name>
    <description>
        Hello World sample application that responds to the deviceready event.
    </description>
    <author email="K@ktheintuitivespecialist.com" href="http://ktheintuitivespecialist.com">
        K the Intuitive Specialist Pty Ltd
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.media" />
    <icon src="icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/drawable-ldpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/drawable-mdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/drawable-hdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/drawable-xhdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icon/android/drawable-xxhdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xxxhdpi" src="res/icon/android/drawable-xxxhdpi/ic_launcher.png" />
    <icon gap:platform="ios" height="29" src="res/icon/ios/Icon-Small.png" width="29" />
    <icon gap:platform="ios" height="58" src="res/icon/ios/Icon-Small@2x.png" width="58" />
    <icon gap:platform="ios" height="87" src="res/icon/ios/Icon-Small@3x.png" width="87" />
    <icon gap:platform="ios" height="40" src="res/icon/ios/Icon-40.png" width="40" />
    <icon gap:platform="ios" height="80" src="res/icon/ios/Icon-40@2x.png" width="80" />
    <icon gap:platform="ios" height="120" src="res/icon/ios/Icon-40@3x.png" width="120" />
    <icon gap:platform="ios" height="50" src="res/icon/ios/Icon-Small-50.png" width="50" />
    <icon gap:platform="ios" height="100" src="res/icon/ios/Icon-Small-50@2x.png" width="100" />
    <icon gap:platform="ios" height="60" src="res/icon/ios/Icon-60.png" width="60" />
    <icon gap:platform="ios" height="120" src="res/icon/ios/Icon-60@2x.png" width="120" />
    <icon gap:platform="ios" height="180" src="res/icon/ios/Icon-60@3x.png" width="180" />
    <icon gap:platform="ios" height="57" src="res/icon/ios/Icon.png" width="57" />
    <icon gap:platform="ios" height="114" src="res/icon/ios/Icon@2x.png" width="114" />
    <icon gap:platform="ios" height="72" src="res/icon/ios/Icon-72.png" width="72" />
    <icon gap:platform="ios" height="144" src="res/icon/ios/Icon-72@2x.png" width="144" />
    <icon gap:platform="ios" height="76" src="res/icon/ios/Icon-76.png" width="76" />
    <icon gap:platform="ios" height="152" src="res/icon/ios/Icon-76@2x.png" width="152" />
    <gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
    <feature name="Media">
        <param name="ios-package" value="CDVSound" />
    </feature>
    <preference name="ios-darkstatusbar" value="true" />
    <gap:config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios">
        <false />
    </gap:config-file>
    <gap:config-file parent="UIStatusBarStyle" platform="ios">
        <string>UIStatusBarStyleLightContent</string>
    </gap:config-file>
    <gap:plugin name="org.apache.cordova.inappbrowser" source="plugins.cordova.io" />
    <plugin name="InAppBrowser" value="CDVInAppBrowser" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" source="plugins.cordova.io" />
    <plugin name="InAppBrowser" value="org.apache.cordova.InAppBrowser" />
    <access origin="*" />
    <engine name="android" spec="^4.0.2" />
    <engine name="ios" spec="^3.8.0" />
</widget>
